{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/openosd-x.elf",
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32G431KBTx",
            "servertype": "jlink",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/STM32G431.svd",
            "rttConfig": {
              "enabled": true,
              "address": "auto",
              "searchId": "SEGGER RTT"
            },
            "postRestartCommands": [
              "monitor speed 4000",
              "monitor clrbp",
              "monitor reset",
              "monitor halt",
              "set $pc = *(uint32_t *)0x08004204",  // Reset vector
              "set $sp = *(uint32_t *)0x08004200"   // MSP
             ]
            "runToEntryPoint": "main",
        }
    ]
}
